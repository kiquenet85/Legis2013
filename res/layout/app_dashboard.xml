<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >

        <TextView
            android:id="@+id/app_home_textView1"
            style="@style/CodeFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
 <!-- android:text="@string/home_nombre_usuario" -->

        <EditText
            android:id="@+id/app_home_editText1"
            style="@style/CodeFont.other"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >

        <TextView
            android:id="@+id/app_home_textView2"
            style="@style/CodeFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
 <!-- android:text="@string/home_contrasena_usuario" -->

        <EditText
            android:id="@+id/app_home_editText2"
            style="@style/CodeFont.other"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/app_home_button1"
            style="@style/CodeFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dashboard_try_again_button_bg"
            android:textColor="@drawable/selector_dashboard_try_again_button_text" />
    </LinearLayout>

</LinearLayout>